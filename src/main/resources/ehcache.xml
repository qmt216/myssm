<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" name="cacheConfig">
 	<cache name="system"
  		   maxEntriesLocalHeap="3000"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="86400"
           memoryStoreEvictionPolicy="LFU"/>
           
    <cache name="service"
  		   maxEntriesLocalHeap="3000"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="86400"
           memoryStoreEvictionPolicy="LFU"/>

    <cache name="channel"
           maxEntriesLocalHeap="100000"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="7200"
           memoryStoreEvictionPolicy="LFU"/>
</ehcache>